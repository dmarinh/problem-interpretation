# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="Problem Interpretation Module"
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# API Server
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# LLM Configuration
# =============================================================================
# Provider: openai, anthropic, ollama, etc. (via LiteLLM)
LLM_MODEL=gpt-4-turbo-preview

# API Key (required for cloud providers)
# For OpenAI: sk-...
# For Anthropic: sk-ant-...
LLM_API_KEY=

# Optional: Override base URL (for proxies or local models)
# LLM_API_BASE=http://localhost:11434

# Generation parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# =============================================================================
# RAG Configuration
# =============================================================================
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_STORE_PATH=./data/vector_store
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# =============================================================================
# Retrieval Confidence Thresholds
# =============================================================================
GLOBAL_MIN_CONFIDENCE=0.65
FOOD_PROPERTIES_CONFIDENCE=0.70
PATHOGEN_HAZARDS_CONFIDENCE=0.75

# =============================================================================
# Clarification Loop
# =============================================================================
MAX_CLARIFICATION_TURNS=3

# =============================================================================
# Conservative Defaults (Safety-Critical)
# =============================================================================
DEFAULT_TEMPERATURE_ABUSE_C=25.0
DEFAULT_PH_NEUTRAL=7.0
DEFAULT_WATER_ACTIVITY=0.99

# =============================================================================
# ComBase Engine
# =============================================================================
COMBASE_API_URL=
COMBASE_TIMEOUT_SECONDS=30